<div class="card card-primary">
  <div class="card-header">
    <h4><%= title %></h4>
  </div>
  <div class="card-body">
    <div class="form-group">
      <% 6.times do |num| %>
        <label>Pokemon <%=num + 1%> </label>
        <select name="trade_offers[<%=player_id%>][]" class="form-control select-2">
          <option value="">Select a pokemon</option>
          <% @pokemon_list.each do |pokemon| %>
            <option value="<%=pokemon.pokedex_id%>"><%=pokemon.name%></option>
          <% end %>
        </select>
      <% end %>
    </div>
  </div>
</div>
