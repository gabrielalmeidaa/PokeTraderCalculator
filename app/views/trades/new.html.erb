<form action="create" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="page-container">
    <div class="content">
      <h1>Create New Trade</h1>
      <div class="row">
        <div class="col-12 col-md-6 col-lg-6">
          <%= render partial: 'trade_offer_form', locals: {title: 'Player 1', player_id: 1} %>
        </div>
        <div class="col-12 col-md-6 col-lg-6">
          <%= render partial: 'trade_offer_form', locals: {title: 'Player 2', player_id: 2} %>
        </div>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-lg">Submit Trade</button>
      </div>
    </div>
  </div>
</form>
<%= javascript_pack_tag 'form_helpers' %>
