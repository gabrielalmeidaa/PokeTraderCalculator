<!DOCTYPE html>
<html>
  <head>
    <title>Pokemon Trade Calculator App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="app">
      <div class="main-wrapper">
        <nav class="navbar navbar-expand-lg bg-primary no-left">
          <a class="navbar-brand" href="#">POKÃ‰MON TRADER APP</a>
          <div class="navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/trades/new">Create Trade</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/trades/historic">Trade History</a>
              </li>
            </ul>
          </div>
        </nav>
      </div>
    </div>
    <div class="page-container">
      <div class="content">
        <% flash.each do |type, msg| %>
          <% if type == 'success' %>
            <div class="alert alert-success">
              <div class="alert-title">Success</div>
              <%= msg %>
            </div>
          <% elsif type == 'error' %>
            <div class="alert alert-warning">
              <div class="alert-title">Error</div>
              <%= msg %>
            </div>
          <% end %>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
